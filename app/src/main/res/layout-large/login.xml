<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"

    android:background="#000000"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/logo_icon"

            />




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_keypad_bg"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="100dp"
                android:background="@mipmap/marquee_bg"
                android:paddingLeft="70dp"
                >

                <TextView
                    android:id="@+id/marquee_text"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="marquee"
                    android:scrollHorizontally="true"
                    android:text="9.00 am Magalir mattum ,12.30 vivegam, 1.00 Billa  9.00 am Magalir mattum ,12.30 vivegam, 1.00 Billa 9.00 am Magalir mattum ,12.30 vivegam, "
                    />


            </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="25dp"
                android:gravity="center"
                android:textColor="#F1BB3A"
                android:text="Welcome !!! User"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:text="Enter your code"
                />

        <LinearLayout
            android:id="@+id/enter_pin"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:background="@drawable/login_editext_bg"
            android:inputType="none"
            android:cursorVisible="false"
            android:gravity="center"
            android:text=""
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/num_one"
                android:layout_weight="1"
                android:text="*"
                android:textColor="@android:color/darker_gray"
                android:textSize="30dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/num_two"
                android:layout_weight="1"
                android:text="*"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/num_three"
                android:layout_weight="1"
                android:text="*"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/num_four"
                android:layout_weight="1"
                android:text="*"
                android:gravity="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_one"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:background="?android:attr/selectableItemBackground"
                android:textSize="40dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="1"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <Button
                android:id="@+id/btn_two"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:background="?android:attr/selectableItemBackground"
                android:elevation="5dp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:textSize="40dp"
                android:text="2"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <Button
                android:id="@+id/btn_three"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:textColor="@android:color/black"
                android:textSize="40dp"

                android:background="?android:attr/selectableItemBackground"
                android:elevation="5dp"
                android:gravity="center"
                android:text="3"
                android:textAppearance="@android:style/TextAppearance.Medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_four"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:background="?android:attr/selectableItemBackground"
                android:elevation="5dp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:text="4"
                android:textSize="40dp"

                android:textAppearance="@android:style/TextAppearance.Medium" />

            <Button
                android:id="@+id/btn_five"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:textColor="@android:color/black"
                android:textSize="40dp"

                android:background="?android:attr/selectableItemBackground"
                android:elevation="5dp"
                android:gravity="center"
                android:text="5"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <Button
                android:id="@+id/btn_six"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:background="?android:attr/selectableItemBackground"
                android:elevation="5dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="40dp"

                android:text="6"
                android:textAppearance="@android:style/TextAppearance.Medium" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_seven"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:background="?android:attr/selectableItemBackground"
                android:elevation="5dp"
                android:textColor="@android:color/black"
                android:textSize="40dp"

                android:gravity="center"
                android:text="7"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <Button
                android:id="@+id/btn_eight"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:background="?android:attr/selectableItemBackground"
                android:elevation="5dp"
                android:textColor="@android:color/black"
                android:textSize="40dp"

                android:gravity="center"
                android:text="8"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <Button
                android:id="@+id/btn_nine"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:background="?android:attr/selectableItemBackground"
                android:elevation="5dp"
                android:textColor="@android:color/black"
                android:textSize="40dp"

                android:gravity="center"
                android:text="9"
                android:textAppearance="@android:style/TextAppearance.Medium" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/login"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:elevation="5dp"
                android:gravity="center"
                android:text="Go"
                android:textSize="40dp"
                android:textColor="@android:color/black"
                android:textAppearance="@android:style/TextAppearance.Medium" />
            <Button
                android:id="@+id/btn_zero"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:background="@android:color/transparent"
                android:elevation="5dp"
                android:textSize="40dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="0"
                android:textAppearance="@android:style/TextAppearance.Medium" />



            <LinearLayout
                android:layout_width="150dp"
                android:gravity="center"
                android:layout_height="80dp"
                >


                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:src="@drawable/ic_backspace_black_24dp" />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>